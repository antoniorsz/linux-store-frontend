{
  "name": "linux-store-frontend",
  "version": "0.7.0-alpha.2",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:prod": "ng serve --prod --open",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build:docker": "ng build --prod && docker build -t jgarciao/linux-store-frontend:latest .",
    "build:client-and-server-bundles:prod": "ng build --prod && ng run linux-store-frontend:server:production",
    "build:client-and-server-bundles": "ng build && ng run linux-store-frontend:server",
    "build:prerender": "npm run build:client-and-server-bundles && npm run webpack:server && npm run generate:prerender",
    "build:ssr:prod": "npm run build:client-and-server-bundles:prod && npm run webpack:server",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "generate:prerender": "cd dist && node prerender",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "6.1.2",
    "@angular/cdk": "6.4.3",
    "@angular/common": "6.1.2",
    "@angular/compiler": "6.1.2",
    "@angular/core": "6.1.2",
    "@angular/flex-layout": "6.0.0-beta.15",
    "@angular/forms": "6.1.2",
    "@angular/http": "^6.1.2",
    "@angular/material": "6.4.3",
    "@angular/platform-browser": "6.1.2",
    "@angular/platform-browser-dynamic": "6.1.2",
    "@angular/platform-server": "^6.1.2",
    "@angular/router": "6.1.2",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-gallery/core": "^2.1.1",
    "core-js": "^2.5.6",
    "hammerjs": "^2.0.8",
    "material-design-icons": "^3.0.1",
    "rxjs": "^6.1.0",
    "rxjs-compat": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.6.1",
    "@angular/cli": "6.1.2",
    "@angular/compiler-cli": "6.1.2",
    "@angular/language-service": "6.1.2",
    "@types/express": "^4.16.0",
    "@types/google.analytics": "0.0.39",
    "@types/jasmine": "~2.8.7",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "http-server": "^0.11.1",
    "express": "^4.16.3",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.2",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.3.2",
    "ts-loader": "^4.4.2",
    "ts-node": "~6.0.3",
    "tslint": "~5.10.0",
    "typescript": "2.9.2",
    "webpack-cli": "^3.1.0"
  }
}
